@model DigitalMailRoomMvc.Models.UserEntity
@{
    ViewData["Title"] = "Login";
}
<head>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/custom.css" />
        <script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>
        <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    </environment>
</head>


<body>
    <div class="login-form">
        <form asp-action="Login" asp-controller="Home" method="post">
            <h2 class="text-center">Log in</h2>
            <div class="form-group">
                <input type="text" asp-for="Username" class="form-control" placeholder="Username" required="required">
            </div>
            <div class="form-group">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block" value="Login">Log in</button>
                @*<input type="submit" value="Login" />*@
            </div>
            <div class="clearfix">
                <label class="pull-left checkbox-inline"><input type="checkbox"> Remember me</label>
                <a href="#" class="pull-right">Forgot Password?</a>
            </div>
        </form>
        <p class="text-center"><a href="#">Create an Account</a></p>
    </div>
</body>